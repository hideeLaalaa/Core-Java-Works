package ch10;

import java.awt.Color;
import java.awt.Graphics;

public abstract class MyShape {

	private int x1;
	private int x2;
	private int y1;
	private int y2;
	private Color myColor;
	
	public MyShape() {
		this(20,20,100,100,Color.BLACK);
	}
	
	public MyShape(int x1,int y1,int x2,int y2,Color color) {
		setX1(x1);
		setX2(x2);
		setY1(y1);
		setY2(y2);
		setColor(color);
	}
	
	public void setColor(Color color){
		try{ 	
			this.myColor=color;
		}catch(IllegalArgumentException e){
			System.out.println("Argument must of the type Color");
		}
	}
	
	public Color getColor(){
		return this.myColor;
	}
	
	public void setX1(int x1){
		if(x1>=0)
			this.x1=x1;
		else this.x1=0;
	}
	
	public int getX1(){
		return x1;
	}
	
	public void setX2(int x2){
		if(x2>=0)
			this.x2=x2;
		else this.x2=0;
	}
	
	public int getX2(){
		return x2;
	}
	
	public void setY1(int y1){
		if(y1>=0)
			this.y1=y1;
		else this.y1=0;
	}
	
	public int getY1(){
		return y1;
	}
	
	public void setY2(int y2){
		if(y2>=0)
			this.y2=y2;
		else this.y2=0;
	}
	
	public int getY2(){
		return y2;
	}
	
	public abstract void draw(Graphics g);

}
  